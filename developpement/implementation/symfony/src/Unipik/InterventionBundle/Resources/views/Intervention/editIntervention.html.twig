            typeEtablissement = '{{ intervention.etablissement.typeAutreEtablissement }}';
            {% endif %}
            switch (etablissement) {
                case 'ens' :
                    $('.form-annee-scolaire').each(function () {
                        treatmentInstitute($(this).get(0), typeEtablissement);
                    });
                    break;
                case 'centre' :
