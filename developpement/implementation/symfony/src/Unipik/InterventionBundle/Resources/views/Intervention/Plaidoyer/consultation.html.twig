{% extends "InterventionBundle:Intervention:consultation.html.twig" %}



{%  block contenu %}

    <div class="col-sm-4 col-xs-12">
        <dl>
            <dt>
                <span class="glyphicon glyphicon-picture"></span> Thème :
            </dt>
        </dl>
    </div>
    <div class="col-sm-6 col-xs-offset-1 col-xs-11">
        <i>{{ intervention.niveauTheme.theme | capitalize}}
    </div>
    <div class="col-sm-4 col-xs-12">
        <dt>
            <span class="glyphicon glyphicon-picture"></span> Matériel disp:
        </dt>
    </div>

    <div class="col-sm-6 col-xs-offset-1 col-xs-11">
            {% set materiels = intervention.materielDispoPlaidoyer | replace({'\\\")\",(': '),('}) | replace({'\"(\\\"': ''}) | split('),(')   %}
            {% if materiels is not empty %}
                <ul class="list-group col-sm-7 ">
                    {% for materiel in materiels %}
                        {{ materiel | trim ('{(') | trim (')}') | capitalize }}
                    {% endfor %}
                </ul>
            {% else %}
                <div class="col-sm-7">
                    Aucun
                </div>
            {% endif %}

    </div>

{%  endblock %}

