{% extends "ArchitectureBundle:Intervention:layout.html.twig" %}

{% block title %}
    Détails - {{ parent() }}
{% endblock %}

{% block body %}

    <h2>Détails intervention</h2>

    <table class="table table-striped table-hover ">
        <tbody>
            <tr><td>Lieu</td><td>{{ intervention.lieu }}</td></tr>
            <tr><td>Date</td><td>{{ intervention.moment }}</td></tr>
            <tr><td>Nombre de personnes</td><td>{{ intervention.nbPersonnes }}</td></tr>
            <tr><td>Matériel disponible</td><td>{{ intervention.materielDispo }}</td></tr>
            <tr><td>Remarques</td><td>{{ intervention.remarques }}</td></tr>
            <tr>
                <td><a href="{{ path('architecture_intervention_homepage') }}" class="btn btn-primary">retour à l'accueil</a></td>
                <td><a href="{{ path('architecture_intervention_delete', {id: intervention.id}) }}" class="btn btn-danger">Supprimer l'intervention</a></td>
            </tr>

        </tbody>

    </table>


{% endblock %}