                <section class="col-lg-10 col-md-10 col-sm-11 col-xs-11 accueilSq droit">
                    <img src="{{ asset('img/logo-gris.png') }}" alt="logo" class="logoDroit">
                    <h2 class="subtitle">Interventions réalisées  </h2>
                    {% if interventionsRealiseesBenevole is not empty %}
                        <div class="table_outer">
                            <table class="table table-striped table-hover ">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Lieu

                                    </th>
                                    <th>Date

                                    </th>
                                    <th>Type</th>
                                    <th>Voir détails</th>
                                </tr>
                                </thead>
                                <tbody id="myTable">
                                {% for intervention in interventionsRealiseesBenevole %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ intervention.lieu | capitalize}}</td>
                                        <td>{{ intervention.dateIntervention|date("d-m-Y") }}</td>
                                        <td>
                                            {% if intervention.plaidoyer %}
                                                Plaidoyer
                                            {% elseif intervention.frimousse %}
                                                Frimousse
                                            {% else %}
                                                Autre intervention
                                            {% endif %}

                                        </td>
                                        <td>
                                            <a href="{{ path('intervention_view', {id: intervention.id}) }}" class="btn btn-primary">Voir détails</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('intervention_attributed') }}" id="lien"> >> Voir plus </a>
                        </div>
                    {% else %}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <ul>
                                    <li>Aucune intervention réalisée</li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </section>
            </section>
        </div>

        <div class="row">
            <section class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-11 col-xs-12" >
                <h2 class="subtitle" style="margin-left: 15px">  Calendrier  </h2>
                <div  id="calendar" class="calendar" style="padding-left: 2%;"></div>
            </section>
        </div>

        <div class="row">
