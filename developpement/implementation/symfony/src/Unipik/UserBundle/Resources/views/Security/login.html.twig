{% extends "UserBundle::formTheme.html.twig" %}


{% block body %}
        <style>
            @import 'https://fonts.googleapis.com/css?family=Ubuntu+Condensed&subset=latin-ext';

            body{
                text-align: center;
            }

            .alert-success{
                margin-top: 80px;
            }

            div.container > div.container{
                border: 2px solid #333333;
                position: relative;
                margin-top: 20vh !important;
                border-radius: 20px;

                padding-bottom: 50px !important;
            }
            .container{
                max-width: 450px;
                margin-left: auto !important;
            }


            input[type="password"], input[type="text"]{
                max-width: 250px !important;
                margin-left: 45px !important;
                border-top: #ffffff;
                border-right: #ffffff;
                border-left: #ffffff;
                border-bottom: 2.5px solid #333333;
                margin-top: 10px;
                box-shadow: none !important;
            }
            input:focus, .form-control:focus{
                outline: none !important;
                box-shadow: none;
                border-bottom: 3px solid #1a6ecc;
                transition: border-bottom 0.5s ease 0s;
            }

            h2{
                font-family: 'Ubuntu Condensed', sans-serif;
                text-align: center;
                font-size: 45px !important;
                margin-top: 70px;
                margin-bottom: 50px;
            }

            h4{
                font-family: 'Ubuntu Condensed', sans-serif;
                text-align: center;
                font-size: 18px !important;
                margin-top: 30px;
                text-align: left;
            }

            form button{
                border-radius: 10px !important;
                background-color: #1a6ecc !important;
                border:none !important;
            }

            div > img{
                border: #00A5E3;
            }

            .logologin{
                width: 180px;
                position: absolute;
                top: -70px;
                left: 27%;
            }

            .col-sm-10{
                position: static !important;
            }

            @media(max-width: 470px){

                .logologin{
                    width: 180px;
                    position: absolute;
                    top: -70px;
                    left: 20%;
                }
            }

            @media (max-width: 400px) {
                .container{
                    padding:15px!important;
                }
            }

            @media (max-width: 372px) {
                input[type="password"], input[type="text"]{
                    margin-left: 30px;
                    width: 200px;
                }
            }
        </style>
    {% if error %}
        <div class="alert alert-dimissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4>ErreurÂ !</h4>
            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        </div>
    {% endif %}
    <img src="{{ asset('img/unicef.jpeg') }}" alt="logo" class="logologin">

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_security_check'), 'attr': {'class': 'fos_user_security_login'}}) }}

    <h4>Nom d'utilisateur</h4>
    {{ form_widget(form._username) }}

    <h4>Mot de passe</h4>
    {{ form_widget(form._password) }}
    <br>
    {{ form_widget(form._remember_me) }}
    <br><br>
    {{ form_widget(form._submit) }}

{% endblock %}
