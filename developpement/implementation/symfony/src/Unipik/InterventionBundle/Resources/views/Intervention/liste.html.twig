{% extends "InterventionBundle::layout.html.twig" %}

{% block title %}

    {{ parent() }}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css") }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("vendor/bootstrap-datepicker/dist/js/bootstrap-datepicker.js") }}"></script>
    <script src="{{ asset("vendor/bootstrap-datepicker/dist/locales/bootstrap-datepicker.fr.min.js") }}"></script>
    <script src="{{ asset("vendor/twbs-pagination/jquery.twbsPagination.js") }}"></script>
    <script>

        $(document).ready(function() {

            $('#myTable').pageMe({pagerSelector:'#myPager',showPrevNext:true,hidePageNumbers:false,perPage:{{ rowsPerPage}} });

            $("#recherche_avancee_date").prop('checked',true);
            $("#between_dates").hide();

            hide_or_show = function() {
                if($(this).is(':checked')){
                    $("#between_dates").hide();
                    $("#recherche_avancee_start").prop('required',false);
                    $("#recherche_avancee_end").prop('required',false);
                }else{
                    $("#between_dates").show();
                    $("#recherche_avancee_start").prop('required',true);
                    $("#recherche_avancee_end").prop('required',true);
                }
            };

            $("#recherche_avancee_date").change(hide_or_show);

            $('#recherche_avancee_start').datepicker({
                format: 'dd-mm-yyyy',
                language: 'fr',
                autoclose: true
            }).on('changeDate', function(selected){
                $('#recherche_avancee_end').datepicker('setStartDate', new Date(selected.date.valueOf()));
            });

            $('#recherche_avancee_end').datepicker({
                format: 'dd-mm-yyyy',
                language: 'fr',
                autoclose: true
            }).on('changeDate', function(selected){
                $('#recherche_avancee_start').datepicker('setEndDate', new Date(selected.date.valueOf()));
            });
        });

        function genererHTML($field, $isReverse){

            if($field == "lieu"){
                if($isReverse){
                    {% set listeS = liste|sortbyfield('lieu')|reverse %}
                    console.log("{%  for intervention in listeS %} {{ intervention.id }} {% endfor %}");
                }else{
                    {% set listeS = liste|sortbyfield('lieu') %}
                    console.log("{%  for intervention in listeS %} {{ intervention.id }} {% endfor %}");
                }
            }
            else{
                if($isReverse){
                    {% set listeS = liste|sortbyfield('dateIntervention')|reverse %}
                    console.log("{%  for intervention in listeS %} {{ intervention.id }} {% endfor %}");
                }else{
                    {% set listeS = liste|sortbyfield('dateIntervention') %}
                    console.log("{%  for intervention in listeS %} {{ intervention.id }} {% endfor %}");
                }
            }
            $html = "{%  for interventionS in listeS %}";
            console.log("{{ interventionS.id }}");
            $html += "<tr>";
            $html += "<td>{{ loop.index }}</td>";
            $html += "<td>{{ interventionS.lieu | capitalize}}</td>";
            $html += "<td>{{ interventionS.dateIntervention|date('d-m-Y') }}</td>";
            $html += "<td>";
            $html += "{% if interventionS.plaidoyer %}";
            $html += "Plaidoyer";
            $html += "{% elseif interventionS.frimousse %}";
            $html += "Frimousse";
            $html += "{% else %}";
            $html += "Autre intervention";
            $html += "{% endif %}";
            $html += "</td>";
            $html += "<td><a href=\"{{ path('intervention_view', {id: interventionS.id}) }}\" class=\"btn btn-primary\">Voir détails</a></td>";
            $html += "{% if is_granted('ROLE_ADMIN') %}";
            $html += "<td>";
            $html += "<div class=\"checkbox\">";
            $html += "<label>";
            $html += "<input type=\"checkbox\" name=\"type\" id=\"{{ interventionS.id }}\">";
            $html += "</label>";
            $html += "</div>";
            $html += "</td>";
            $html += "{% endif %}";
            $html += "</tr>";
            $html += "{% endfor %}";

            return $html;
        }

        function sortByLieu(){
            if($('#sortLieu').hasClass("sort-down")){
                $('#sortLieu').removeClass();
                $('#sortLieu').addClass("sort sort-up");
                $('#sortLieu').attr("src", "{{ asset('img/sort-up.png')}}");

                $('#tableIntervention #myTable tr').detach();

                $('#myPager li').detach();

                $('#tableIntervention #myTable').append(genererHTML("lieu", false));
                $('#myTable').pageMe({pagerSelector:'#myPager',showPrevNext:true,hidePageNumbers:false,perPage:{{ rowsPerPage}} });

            }
            else {
                $('#sortLieu').removeClass();
                $('#sortLieu').addClass("sort sort-down");
                $('#sortLieu').attr("src", "{{ asset('img/sort-down.png')}}");


                $('#tableIntervention #myTable tr').detach();
                $('#myPager li').detach();


                $('#tableIntervention #myTable').append(genererHTML("lieu", true));
                $('#myTable').pageMe({pagerSelector:'#myPager',showPrevNext:true,hidePageNumbers:false,perPage:{{ rowsPerPage}} });

            }
        }

        function sortByDate(){
            if($('#sortDate').hasClass("sort-down")){
                $('#sortDate').removeClass();
                $('#sortDate').addClass("sort sort-up");
                $('#sortDate').attr("src", "{{ asset('img/sort-up.png')}}");


                $('#tableIntervention #myTable tr').detach();
                $('#myPager li').detach();


                $('#tableIntervention #myTable').append(genererHTML("date", false));
                $('#myTable').pageMe({pagerSelector:'#myPager',showPrevNext:true,hidePageNumbers:false,perPage:{{ rowsPerPage}} });

            }
            else {
                $('#sortDate').removeClass();
                $('#sortDate').addClass("sort sort-down");
                $('#sortDate').attr("src", "{{ asset('img/sort-down.png')}}");


                $('#tableIntervention #myTable tr').detach();
                $('#myPager li').detach();

                $('#tableIntervention #myTable').append(genererHTML("date", true));
                $('#myTable').pageMe({pagerSelector:'#myPager',showPrevNext:true,hidePageNumbers:false,perPage:{{ rowsPerPage}} });

            }
        }

        function deleteInterventions() {
            var selected = [];

            $("input:checkbox[name=type]:checked").each(function(){
                var $this = $(this);
                selected.push($this.attr("id"));
            });

            var ids = JSON.stringify(selected);

            $.post("{{ path('intervention_admin_deletes') }}", {'ids':ids},
                    function(data, status){
                        for(i=0;i<selected.length;i++){
                            $("#"+selected[i]).closest('tr').remove();
                        }
                    });
        }

    </script>
{% endblock %}



{% block body %}

    <section class="col-lg-2 col-md-2 col-sm-2">
        <div class="row">
            <div class='well'>

                {{ form_start(form, {'method': 'get', 'action': path('intervention_list'), 'attr': {'class': 'intervention_list form-sm'}}) }}
                <h5>Type d'intervention :</h5>
                {{ form_widget(form.typeIntervention) }}
                <br/>

                <h5>Dates d'intervention :</h5>
                {{ form_widget(form.date) }}
                <br/>
                <div id="between_dates">
                    Interventions entre le
                    {{ form_widget(form.start, { 'attr': {'class': 'input-sm'} }) }}
                    et le
                    {{ form_widget(form.end, { 'attr': {'class': 'input-sm'} }) }}
                </div>

                <br/>

                <div>
                    <input id="submit" type="submit" value="OK" class="btn btn-primary"/>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </section>


    <section id="listeIntervention" class="col-lg-10 col-md-10 col-sm-10">
        <h2>
            Liste des
            {% if typeIntervention == "plaidoyer" %}
                plaidoyers
            {% elseif typeIntervention == "frimousse" %}
                interventions frimousses
            {% elseif typeIntervention == "autreIntervention" %}
                autres interventions
            {% else  %}
                interventions
            {% endif %}
            {% if isCheck is empty %}
                {% if dateStart is not null %}
                    entre le {{ dateStart.format('d-m-Y') }}
                {% endif %}
                {% if dateEnd is not null %}
                    et le {{ dateEnd.format('d-m-Y') }}
                {% endif %}
            {% endif %}
            :
        </h2>

        <div class="container">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="tableIntervention">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Lieu <button class="sortButtonLieu" id="sortButtonLieu" onclick="sortByLieu()"><img src="{{ asset('img/sort-down.png') }}" class="sort sort-down" id="sortLieu"/></button></th>
                            <th>Date <button class="sortButtonDate" id="sortButtonDate" onclick="sortByDate()"><img src="{{ asset('img/sort-down.png') }}" class=" sort sort-down" id="sortDate"/></button></th>
                            <th>Type</th>
                            <th>Voir détails</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>Supprimer</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody id="myTable">
                        {% for intervention in liste %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ intervention.lieu | capitalize}}</td>
                                <td>{{ intervention.dateIntervention|date("d-m-Y") }}</td>
                                <td>
                                    {% if intervention.plaidoyer %}
                                        Plaidoyer
                                    {% elseif intervention.frimousse %}
                                        Frimousse
                                    {% else %}
                                        Autre intervention
                                    {% endif %}

                                </td>
                                <td>
                                    <a href="{{ path('intervention_view', {id: intervention.id}) }}" class="btn btn-primary">Voir détails</a>
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="type" id="{{ intervention.id }}">
                                            </label>
                                        </div>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="buttons">
                            <a href="{{ path('intervention_admin_add') }}" class="btn btn-primary btn-danger">
                                <i class="glyphicon glyphicon-alert"></i> &nbsp Ajouter une intervention
                            </a>
                            {% if liste is not empty %}
                                <button type="button" class="btn btn-danger" onclick="deleteInterventions()">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    &nbsp Supprimer</button>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-12 text-center">
                    <ul>Par page : <a href="?rowsPerPage=5">5</a>, <a href="?rowsPerPage=10">10</a>, <a href="?rowsPerPage=20">20</a>, <a href="?rowsPerPage=50">50</a>, <a href="?rowsPerPage=100">100</a></ul>
                    <ul class="pagination pagination-lg pager" id="myPager"></ul>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
