{% extends "InterventionBundle::layout.html.twig" %}

{% block title %}

    Liste des établissements - {{ parent() }}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("vendor/bootstrap-datepicker/dist/js/bootstrap-datepicker.js") }}"></script>
    <script>
        $(document).ready(function() {
            $("#recherche_avancee_typeEnseignement").hide();
            $("#recherche_avancee_typeCentre").hide();
            $("#recherche_avancee_typeAutreEtablissement").hide();



            hide_or_show = function() {
                if($('#recherche_avancee_typeEtablissement_0').is(':checked')) {
                    $("#recherche_avancee_typeEnseignement").hide();
                    $("#recherche_avancee_typeEnseignement_0").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_1").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_2").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_3").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_4").attr('checked',false);
                    $("#recherche_avancee_typeCentre").hide();
                    $("#recherche_avancee_typeCentre_0").attr('checked',false);
                    $("#recherche_avancee_typeCentre_1").attr('checked',false);
                    $("#recherche_avancee_typeCentre_2").attr('checked',false);
                    $("#recherche_avancee_typeCentre_3").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement").hide();
                    $("#recherche_avancee_typeAutreEtablissement_0").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement_1").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement_2").attr('checked',false);
                }
                if($('#recherche_avancee_typeEtablissement_1').is(':checked')) {
                    $("#recherche_avancee_typeEnseignement").show();
                    $("#recherche_avancee_typeCentre").hide();
                    $("#recherche_avancee_typeCentre_0").attr('checked',false);
                    $("#recherche_avancee_typeCentre_1").attr('checked',false);
                    $("#recherche_avancee_typeCentre_2").attr('checked',false);
                    $("#recherche_avancee_typeCentre_3").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement").hide();
                    $("#recherche_avancee_typeAutreEtablissement_0").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement_1").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement_2").attr('checked',false);
                }
                if($('#recherche_avancee_typeEtablissement_2').is(':checked')) {
                    $("#recherche_avancee_typeEnseignement").hide();
                    $("#recherche_avancee_typeEnseignement_0").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_1").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_2").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_3").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_4").attr('checked',false);
                    $("#recherche_avancee_typeCentre").show();
                    $("#recherche_avancee_typeAutreEtablissement").hide();
                    $("#recherche_avancee_typeAutreEtablissement_0").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement_1").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement_2").attr('checked',false);
                }
                if($('#recherche_avancee_typeEtablissement_3').is(':checked')) {
                    $("#recherche_avancee_typeEnseignement").hide();
                    $("#recherche_avancee_typeEnseignement_0").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_1").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_2").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_3").attr('checked',false);
                    $("#recherche_avancee_typeEnseignement_4").attr('checked',false);
                    $("#recherche_avancee_typeCentre").hide();
                    $("#recherche_avancee_typeCentre_0").attr('checked',false);
                    $("#recherche_avancee_typeCentre_1").attr('checked',false);
                    $("#recherche_avancee_typeCentre_2").attr('checked',false);
                    $("#recherche_avancee_typeCentre_3").attr('checked',false);
                    $("#recherche_avancee_typeAutreEtablissement").show();
                }
            };

            $("#recherche_avancee_typeEtablissement").change(hide_or_show);
        });

        function deleteEtablissements() {
            var selected = [];

            $("input:checkbox[name=type]:checked").each(function(){
                var $this = $(this);
                selected.push($this.attr("id"));
            });

            var ids = JSON.stringify(selected);

            $.post("{{ path('etablissement_admin_deletes') }}", {'ids':ids},
                    function(data, status) {
                        for(i=0;i<selected.length;i++){
                            $("#"+selected[i]).closest('tr').remove();
                        }
                    });
        }
    </script>
{% endblock %}

{% block body %}
    <section class="col-lg-2 col-md-2 col-sm-2">
        <div class="row">
            <div class='well'>

                {{ form_start(form, {'method': 'post', 'action': path('etablissement_list'), 'attr': {'class': 'etablissement_list form-sm'}}) }}
                <h5>Type d'établissement :</h5>
                {{ form_widget(form.typeEtablissement) }}

                <div id="type">
                    <br/>
                    {{ form_widget(form.typeEnseignement) }}
                    {{ form_widget(form.typeCentre) }}
                    {{ form_widget(form.typeAutreEtablissement) }}
                </div>

                <br/>

                <h5>Ville :</h5>
                {{ form_widget(form.ville) }}

                <br/>

                <div>
                    <input id="submit" type="submit" value="OK" class="btn btn-primary"/>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </section>


    <section class="col-lg-10 col-md-10 col-sm-10">
        <h2>Liste des établissements :</h2>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Type</th>
                <th>Voir détails</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Supprimer</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for etablissement in liste %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ etablissement.nom }}</td>
                    <td>{{ etablissement.adresse.ville.nom }}</td>
                    <td>
                    {% if etablissement.centreLoisirs %}
                        Centre de Loisirs
                    {% elseif etablissement.autreEtablissement %}
                        Autre établissement
                    {% else %}
                        Enseignement
                    {% endif %}
                    </td>
                    <td><a href="{{ path('etablissement_view', {id: etablissement.id}) }}" class="btn btn-primary">Voir détails</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="type" id="{{ etablissement.id }}">
                                </label>
                            </div>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <td colspan="5" class="text-center">
                        <a href="{#{ path('architecture_intervention_add') }#}" class="btn btn-primary btn-danger">
                            <i class="glyphicon glyphicon-alert"></i> Ajouter un établissement
                        </a>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger" onclick="deleteEtablissements()">Supprimer</button>
                    </td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </section>

{% endblock %}
