            {% endif %}
            {% endif %}
            {% endif %}
            {% if intervention.benevole is not null %}
            {% if user.id == intervention.benevole.id %}
            interventions.push({
                title  : typeIntervention + ' - ' + typeEtablissement + ' - {{ intervention.etablissement.adresse.ville.nom }} ',
                start  : '{{ intervention.dateIntervention|date("Y-m-d") }}T{{ intervention.heure }}',
                allDay: false,
                url: '{{ path('intervention_view', {id: intervention.id}) }}',
                color  : '#82C46C' });
            {% else %}
            interventions.push({ title  : typeIntervention +  ' - ' + typeEtablissement + ' - {{ intervention.etablissement.adresse.ville.nom }} '   ,
                start  : '{{ intervention.dateIntervention|date("Y-m-d") }}T{{ intervention.heure }}',
                allDay: false,
                url: '{{ path('intervention_view', {id: intervention.id}) }}',
                color  : 'grey' });
            {% endif %}
            {% endif %}
            {% endif %}
            {% endfor %}
            return interventions;
        }
        function remplirPlanning(liste){
            $('#calendar').fullCalendar({
                locale: "fr",
                events: liste,
                weekends: true,
                header:
                {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                eventLimit: 2,
                views: {
                    basic: {
                        eventLimit: 2
                    },
                    agenda: {
                        eventLimit: 2
                    },
                    week: {
                        eventLimit: 2
                    },
                    agendaDay: {
                        eventLimit: 2
                    },
                    month: {
                        eventLimit: 2
                    },
                    basicWeek: {
                        eventLimit: 2
                    },
                    basicDay: {
                        eventLimit: 2
                    },
                    agendaWeek: {
                        eventLimit: 2
                    },
                }

            });

            $('#calendar').fullCalendar( 'rerenderEvents' );
        }

        function okRealiserIntervention() {

            var selected = [];
            $("input:radio:checked").each(function () {
                var $this = $(this);
                if ($this.val() == "oui") {
                    selected.push($this.attr("id"));
                }

            });

            var interventions = JSON.stringify(selected);

            sessionStorage["modalShown" + "{{ user }}"] = 'shown';

            $.post("{{ path('intervention_multiple_done') }}", {'interventions': interventions},
                function (data, status) {
                    location.reload(true);
                });
        }

