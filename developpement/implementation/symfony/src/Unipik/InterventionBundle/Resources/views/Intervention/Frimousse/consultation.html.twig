{% extends "InterventionBundle:Intervention:consultation.html.twig" %}

{% block title %}

    Consultation frimousse - {{ parent() }}

{% endblock %}

{%  block contenu %}
    {% if intervention.niveauFrimousse %}
        <div class="col-sm-5 col-xs-12  col-md-4">
            <dl>
                <dt>
                    <span class="glyphicon glyphicon-book"></span> &nbsp Classe concernée:
                </dt>
            </dl>
        </div>
        <div class="col-sm-5 col-xs-offset-1 col-xs-11 col-md-7">
            <em> {{ intervention.niveauFrimousse | capitalize }} </em>
        </div>
    {% endif %}

    <div class="col-sm-5 col-xs-12 col-md-4">
        <dl>
            <dt>
                <span class="glyphicon glyphicon-picture"></span> Matériel dispo.:
            </dt>
        </dl>
    </div>
    <div class="col-sm-5 col-xs-offset-1 col-xs-11">
        <ul class="list-unstyled">
            {% set materiels = intervention.materiauxFrimousse | replace({'{(': ''}) | replace({')}': ''}) | replace({'}': ''})  | replace({'{': ''}) | split('),(')  %}
            {% if materiels  %}
                <ul class="list-group col-sm-7 ">
                    {% for materiel in materiels %}
                        {{ materiel | capitalize }} <br>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="col-sm-7">
                    Aucun
                </div>
            {% endif %}
        </ul>

    </div>


{%  endblock %}
