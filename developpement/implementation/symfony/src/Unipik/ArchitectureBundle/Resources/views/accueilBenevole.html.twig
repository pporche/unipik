                                <table class="table table-striped table-hover ">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Lieu
                                        </th>
                                        <th>Date

                                        </th>
                                        <th>Type</th>
                                        <th>Voir détails</th>
                                    </tr>
                                    </thead>
                                    <tbody id="myTable">
                                    {% for intervention in interventionsNonRealiseesBenevole %}
