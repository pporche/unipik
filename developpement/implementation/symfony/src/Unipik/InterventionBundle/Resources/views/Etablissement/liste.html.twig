{% extends "InterventionBundle::layout.html.twig" %}

{% block title %}

    Liste des établissements - {{ parent() }}

{% endblock %}

{% block body %}
    <h2>Liste des établissements :</h2>
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Lieu</th>
            <th>Date</th>
            <th>Voir détails</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Supprimer</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>

        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <td colspan="5" class="text-center"><a href="{#{ path('architecture_intervention_add') }#}" class="btn btn-primary btn-danger"><i class="glyphicon glyphicon-alert"></i> Ajouter un établissement</a></td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}
