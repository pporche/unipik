{% if form is defined %}
    {% use '::formTheme.html.twig' %}
    {{ block('formTheme') }}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <noscript>
            <meta http-equiv="refresh" content="0; URL='{{ path('architecture_noJavascript') }}">
        </noscript>

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('vendor/bootswatch-dist/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/stylePersonalized.css') }}" />
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

    {%  use '::navbar.html.twig' %}
    {{ block('navbar') }}

    {% block misc %}

    <div class="container">

        <div id="header"></div>


        <div class="container">

            {% use '::alert.html.twig' %}
            {{ block('alert') }}

            {% block body %}{% endblock %}
        </div>


    </div>

    {% endblock %}



    {% block javascripts %}
        <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('vendor/bootswatch-dist/js/bootstrap.min.js') }}"></script>
        <script src="https://raw.githubusercontent.com/bpampuch/pdfmake/master/build/pdfmake.min.js"></script>
        <script src="https://raw.githubusercontent.com/bpampuch/pdfmake/master/build/vfs_fonts.js"></script>

    {% endblock %}
    </body>
</html>
