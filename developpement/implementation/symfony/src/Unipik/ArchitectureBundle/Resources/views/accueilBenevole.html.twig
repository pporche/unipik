{% extends "ArchitectureBundle::layoutArchitecture.html.twig" %}

{% block title %}

    Accueil - {{ parent() }}

{% endblock %}

{% block body %}



        <section class="col-lg-2 col-md-2 col-sm-2">
            <div class="row">
                <nav class="col-sm-12">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="#">Accueil</a></li>
                        <li><a href="{{ path('fos_user_profile_show') }}">Mon profil</a></li>
                        <li><a href="{{  path('fos_user_profile_edit') }}">Modifier mon profil</a></li>
                        <li><a href="{{  path('etablissement_list') }}">Liste des établissements</a></li>
                        <li><a href="">Mes interventions</a></li>
                        <li><a href="">Mon planning</a></li>
                    </ul>
                </nav>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    <a class="lienImage img-responsive" href="https://www.unicef.fr/" target="_blank">
                        <img src="{{ asset("img/unicef-logo.gif") }}" class="center-block img-responsive img-rounded" alt="logo UNICEF"/>
                    </a>
                </li>
                <li class="list-group-item">
                    <a class="lienImage img-responsive" href="https://www.facebook.com/UnicefRouen/" target="_blank">
                        <img src="{{ asset("img/FB-FindUsonFacebook-online-512_fr_FR.png") }}" class="center-block img-responsive img-rounded" alt="Facebook"/>
                    </a>
                </li>
            </ul>
        </section>

        <section class="col-lg-10 col-md-10 col-sm-10">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h2>Bonjour {{ user.prenom }} !</h2>
                </div>
            </div>

            <section class="col-lg-10 col-md-10 col-sm-10">
                    <h2> <a href=""> Liste des interventions en cours </a> </h2>
                    {% if interventionsNonRealisees is not empty %}
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Lieu 
                                	<button class="sortButtonLieu" id="sortButtonLieu" onclick="sortByLieu()">
                                		<img src="{{ asset('img/sort-down.png') }}" class="sort sort-down" id="sortLieu"  alt="sort Down"/>
                                	</button>
                                </th>
                                <th>Date 
                                	<button class="sortButtonDate" id="sortButtonDate" onclick="sortByDate()">
                                		<img src="{{ asset('img/sort-down.png') }}" class=" sort sort-down" id="sortDate" alt="sort Down"/>
                                	</button>
                                </th>
                                <th>Type</th>
                                <th>Voir détails</th>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <th>Supprimer</th>
                                {% endif %}
                            </tr>
                            </thead>
                             <tbody id="myTable">
                             {% for intervention in interventionsNonRealisees %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ intervention.lieu | capitalize}}</td>
                                    <td>{{ intervention.dateIntervention|date("d-m-Y") }}</td>
                                    <td>
                                        {% if intervention.plaidoyer %}
                                            Plaidoyer
                                        {% elseif intervention.frimousse %}
                                            Frimousse
                                        {% else %}
                                            Autre intervention
                                        {% endif %}

                                    </td>
                                    <td>
                                        <a href="{{ path('intervention_view', {id: intervention.id}) }}" class="btn btn-primary">Voir détails</a>
                                    </td>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <td>
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="type" id="{{ intervention.id }}">
                                                </label>
                                            </div>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <ul>
                                    <li>Aucune intervention en cours</li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}
            </section>

            <section class="col-lg-10 col-md-10 col-sm-10">
                <h2> <a href=""> Liste des interventions réalisées </a> </h2>
                {% if interventionsRealisees is not empty %}
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Lieu 
                            	<button class="sortButtonLieu" id="sortButtonLieu" onclick="sortByLieu()">
                            		<img src="{{ asset('img/sort-down.png') }}" class="sort sort-down" id="sortLieu" alt="sort Down"/>
                            	</button>
                            </th>
                            <th>Date 
                            	<button class="sortButtonDate" id="sortButtonDate" onclick="sortByDate()">
                            		<img src="{{ asset('img/sort-down.png') }}" class=" sort sort-down" id="sortDate" alt="sort Down"/>
                            	</button>
                            </th>
                            <th>Type</th>
                            <th>Voir détails</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>Supprimer</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody id="myTable">
                        {% for intervention in interventionsRealisees %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ intervention.lieu | capitalize}}</td>
                                <td>{{ intervention.dateIntervention|date("d-m-Y") }}</td>
                                <td>
                                    {% if intervention.plaidoyer %}
                                        Plaidoyer
                                    {% elseif intervention.frimousse %}
                                        Frimousse
                                    {% else %}
                                        Autre intervention
                                    {% endif %}

                                </td>
                                <td>
                                    <a href="{{ path('intervention_view', {id: intervention.id}) }}" class="btn btn-primary">Voir détails</a>
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="type" id="{{ intervention.id }}">
                                            </label>
                                        </div>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <ul>
                                <li>Aucune intervention réalisée</li>
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </section>
            <section class="col-lg-10 col-md-10 col-sm-10">
                <h2> <a href=""> Votre planning </a> </h2>

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <ul>
                            <li>Trop dur à faire</li>
                        </ul>
                    </div>
                </div>
            </section>

        </section>

{% endblock %}
