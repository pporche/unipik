{% extends "ArchitectureBundle::layoutArchitecture.html.twig" %}
{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('vendor/moment/moment.js') }}" xmlns:white-space="http://www.w3.org/1999/xhtml"></script>
    <script src="{{ asset('vendor/fullcalendar/dist/fullcalendar.min.js') }}"></script>
    <script src="{{ asset('vendor/fullcalendar/dist/locale/fr.js') }}"></script>
    <style>
        .fc-month-view span.fc-title{
            white-space: normal;

        }

        #lien{float: right; }
    </style>
    <script type="text/javascript">
        $(document).ready(function() {
            var interventions = [];
            var typeIntervention ;

            {% for intervention in interventionsNonRealisees %}
                {% if intervention.dateIntervention is not null  %}
                    {% if intervention.plaidoyer %}
                        typeIntervention = "Plaidoyer";
                    {% elseif intervention.frimousse %}
                        typeIntervention = "Frimousse";
                    {% else %}
                        typeIntervention = "Autre intervention";
                    {% endif %}
                    {% if intervention.etablissement.nom != null  %}
                        typeEtablissement = "{{ intervention.etablissement.nom }}"
                    {% elseif  intervention.etablissement.nom == null %}
                        {% if intervention.etablissement.typeEnseignement is not empty %}
                            {% if intervention.etablissement.typeEnseignement == "maternelle" %}
                                typeEtablissement = "Ecole maternelle";
                            {% elseif intervention.etablissement.typeEnseignement == "elementaire" %}
                                typeEtablissement = "Ecole élémentaire";
                            {% elseif intervention.etablissement.typeEnseignement == "college" %}
                                typeEtablissement = "Collège";
                            {% elseif intervention.etablissement.typeEnseignement == "lycee" %}
                                typeEtablissement = "Lycée";
                            {% elseif intervention.etablissement.typeEnseignement == "superieur" %}
                                typeEtablissement = "Supérieur";
                            {% endif %}
                        {% elseif intervention.etablissement.typeCentre is not empty %}
                            {% if intervention.etablissement.typeCentre == "maternelle" %}
                                typeEtablissement = "Centre de loisirs maternelle";
                            {% elseif intervention.etablissement.typeCentre == "elementaire" %}
                                typeEtablissement = "Centre de loisirs élémentaire";
                            {% elseif intervention.etablissement.typeCentre == "adolescent" %}
                                typeEtablissement = "Centre de loisirs adolescent";
                            {% elseif intervention.etablissement.typeCentre == "autre" %}
                                typeEtablissement = "Centre de loisirs autre";
                            {% endif %}
                        {% elseif intervention.etablissement.typeAutreEtablissement is not empty %}
                            {% if intervention.etablissement.typeAutreEtablissement == "mairie" %}
                            typeEtablissement = "mairie";
                            {% elseif intervention.etablissement.typeAutreEtablissement == "maison de retraite" %}
                            typeEtablissement = "maison de retraite";
                            {% elseif intervention.etablissement.typeAutreEtablissement == "autre" %}
                            typeEtablissement = "maison de retraite";
                            {% endif %}
                        {% endif %}
                    {% endif %}
                    {% if intervention.benevole is not null %}
                        {% if user.id == intervention.benevole.id %}
                            interventions.push({ title  : typeIntervention + ' - ' + typeEtablissement + ' - {{ intervention.etablissement.adresse.ville.nom }} '   ,
                                start  : '{{ intervention.dateIntervention|date("Y-m-d") }}',
                                url: '{{ path('intervention_view', {id: intervention.id}) }}' });
                        {% else %}
                            interventions.push({ title  : typeIntervention + ' - ' + typeEtablissement + ' - {{ intervention.etablissement.adresse.ville.nom }} '   ,
                                start  : '{{ intervention.dateIntervention|date("Y-m-d") }}',
                                url: '{{ path('intervention_view', {id: intervention.id}) }}',
                                color  : 'grey' });
                        {% endif %}
                    {% endif %}
                {% endif %}
                {% endfor %}
                {% for intervention in interventionsRealisees %}
                    {% if intervention.dateIntervention is not null  %}
                        {% if intervention.plaidoyer %}
                            typeIntervention = "Plaidoyer";
                        {% elseif intervention.frimousse %}
                            typeIntervention = "Frimousse";
                        {% else %}
                            typeIntervention = "Autre intervention";
                        {% endif %}
                        {% if intervention.etablissement.nom != null  %}
                            typeEtablissement = "{{ intervention.etablissement.nom }}"
                        {% elseif  intervention.etablissement.nom == null %}
                            {% if intervention.etablissement.typeEnseignement is not empty %}
                                {% if intervention.etablissement.typeEnseignement == "maternelle" %}
                                    typeEtablissement = "Ecole maternelle";
                                {% elseif intervention.etablissement.typeEnseignement == "elementaire" %}
                                    typeEtablissement = "Ecole élémentaire";
                                {% elseif intervention.etablissement.typeEnseignement == "college" %}
                                    typeEtablissement = "Collège";
                                {% elseif intervention.etablissement.typeEnseignement == "lycee" %}
                                    typeEtablissement = "Lycée";
                                {% elseif intervention.etablissement.typeEnseignement == "superieur" %}
                                    typeEtablissement = "Supérieur";
                                {% endif %}
                            {% elseif intervention.etablissement.typeCentre is not empty %}
                                {% if intervention.etablissement.typeCentre == "maternelle" %}
                                    typeEtablissement = "Centre de loisirs maternelle";
                                {% elseif intervention.etablissement.typeCentre == "elementaire" %}
                                    typeEtablissement = "Centre de loisirs élémentaire";
                                {% elseif intervention.etablissement.typeCentre == "adolescent" %}
                                    typeEtablissement = "Centre de loisirs adolescent";
                                {% elseif intervention.etablissement.typeCentre == "autre" %}
                                    typeEtablissement = "Centre de loisirs autre";
                                {% endif %}
                            {% elseif intervention.etablissement.typeAutreEtablissement is not empty %}
                                {% if intervention.etablissement.typeAutreEtablissement == "mairie" %}
                                    typeEtablissement = "mairie";
                                {% elseif intervention.etablissement.typeAutreEtablissement == "maison de retraite" %}
                                    typeEtablissement = "maison de retraite";
                                {% elseif intervention.etablissement.typeAutreEtablissement == "autre" %}
                                    typeEtablissement = "maison de retraite";
                                {% endif %}
                            {% endif %}
                        {% endif %}
                        {% if intervention.benevole is not null %}
                            {% if user.id == intervention.benevole.id %}
                                interventions.push({ title  : typeIntervention + ' - ' + typeEtablissement + ' - {{ intervention.etablissement.adresse.ville.nom }} '   ,
                                    start  : '{{ intervention.dateIntervention|date("Y-m-d") }}',
                                    url: '{{ path('intervention_view', {id: intervention.id}) }}',
                                    color  : '#82C46C' });
                            {% else %}
                                interventions.push({ title  : typeIntervention + ' - ' + typeEtablissement + ' - {{ intervention.etablissement.adresse.ville.nom }} '   ,
                                    start  : '{{ intervention.dateIntervention|date("Y-m-d") }}',
                                    url: '{{ path('intervention_view', {id: intervention.id}) }}',
                                    color  : 'grey' });
                            {% endif %}
                        {% endif %}
                    {% endif %}
            {% endfor %}

            $('#calendar').fullCalendar({
                locale:"fr",
                events: interventions
            })


        });

    </script>
{% endblock %}

{% block title %}

    Accueil - {{ parent() }}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel='stylesheet' href="{{ asset('vendor/fullcalendar/dist/fullcalendar.css') }}"

    />
{% endblock %}



{% block body %}

        <section class="col-lg-2 col-md-2 col-sm-2">
            <div class="row">
                <nav class="col-sm-12">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="#">Accueil</a></li>
                        <li><a href="{{ path('fos_user_profile_show') }}">Mon profil</a></li>
                        <li><a href="{{  path('fos_user_profile_edit') }}">Modifier mon profil</a></li>
                        <li><a href="{{  path('etablissement_list') }}">Liste des établissements</a></li>
                        <li><a href="{{  path('intervention_attributed') }}">Mes interventions</a></li>
                        <li><a href="{{  path('fos_user_planning_show') }}">Mon planning</a></li>
                    </ul>
                </nav>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    <a class="lienImage img-responsive" href="https://www.unicef.fr/" target="_blank">
                        <img src="{{ asset("img/unicef-logo.gif") }}" class="center-block img-responsive img-rounded" alt="logo UNICEF"/>
                    </a>
                </li>
                <li class="list-group-item">
                    <a class="lienImage img-responsive" href="https://www.facebook.com/UnicefRouen/" target="_blank">
                        <img src="{{ asset("img/FB-FindUsonFacebook-online-512_fr_FR.png") }}" class="center-block img-responsive img-rounded" alt="Facebook"/>
                    </a>
                </li>
            </ul>

            <div class="col-xs-9 col-md-2"> <div class="panel panel-default">
                    <div class="panel-body">
                        <div>
                            <h4 style="text-align:center"> Légendes </h4>
                            <button type="button" class="btn btn-default btn-xs"></button>
                            Interventions d'autres bénévoles
                            </br>
                            <button type="button" class="btn btn-success btn-xs"></button> Mes interventions réalisées
                            </br>
                            <button type="button" class="btn btn-primary btn-xs"></button> Mes interventions à réaliser
                            </br>
                        </div>
                    </div>
                </div></div>
        </section>

        <section class="col-lg-10 col-md-10 col-sm-10">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h2>Bonjour {{ user.prenom }} !</h2>
                </div>
            </div>

            <section class="col-lg-10 col-md-10 col-sm-10">
                    <h2>  Liste des prochaines interventions </h2>

                    {% if interventionsNonRealiseesBenevole is not empty %}
                        <div class="table_outer">
                            <table class="table table-striped table-hover ">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Lieu
                                    </th>
                                    <th>Date

                                    </th>
                                    <th>Type</th>
                                    <th>Voir détails</th>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <th>Supprimer</th>
                                    {% endif %}
                                </tr>
                                </thead>
                                <tbody id="myTable">
                                {% for intervention in interventionsNonRealiseesBenevole %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ intervention.lieu | capitalize}}</td>
                                        <td>{{ intervention.dateIntervention|date("d-m-Y") }}</td>
                                        <td>
                                            {% if intervention.plaidoyer %}
                                                Plaidoyer
                                            {% elseif intervention.frimousse %}
                                                Frimousse
                                            {% else %}
                                                Autre intervention
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('intervention_view', {id: intervention.id}) }}" class="btn btn-primary">Voir détails</a>
                                        </td>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <td>
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" name="type" id="{{ intervention.id }}">
                                                    </label>
                                                </div>
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('intervention_attributed')}}" id="lien"> >> Voir plus</a>
                        </div>

                    {% else %}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <ul>
                                    <li>Aucune intervention en cours</li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}
            </section>
            <section class="col-lg-10 col-md-10 col-sm-10">
                <h2>  Liste des interventions réalisées  </h2>
                {% if interventionsRealiseesBenevole is not empty %}
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Lieu

                            </th>
                            <th>Date

                            </th>
                            <th>Type</th>
                            <th>Voir détails</th>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>Supprimer</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody id="myTable">
                        {% for intervention in interventionsRealiseesBenevole %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ intervention.lieu | capitalize}}</td>
                                <td>{{ intervention.dateIntervention|date("d-m-Y") }}</td>
                                <td>
                                    {% if intervention.plaidoyer %}
                                        Plaidoyer
                                    {% elseif intervention.frimousse %}
                                        Frimousse
                                    {% else %}
                                        Autre intervention
                                    {% endif %}

                                </td>
                                <td>
                                    <a href="{{ path('intervention_view', {id: intervention.id}) }}" class="btn btn-primary">Voir détails</a>
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="type" id="{{ intervention.id }}">
                                            </label>
                                        </div>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('intervention_attributed') }}" id="lien"> >> Voir plus </a>
                {% else %}
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <ul>
                                <li>Aucune intervention réalisée</li>
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </section>
            <section>
                <div class="row">

                    <div class="col-xs-3 col-md-10">
                        <div  id="calendar">
                        </div>
                    </div>
                </div>
            </section>

        </section>

{% endblock %}
