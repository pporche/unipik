{% extends "InterventionBundle::layout.html.twig" %}

{% block title %}

    {{ parent() }}

{% endblock %}

{% block body %}

    <section class="col-lg-2 col-md-2 col-sm-2">
        <div class="row">
            <form class="col-lg-12 col-md-12 col-sm-12 well">
                <legende>Recherche avancée</legende>
                <fieldset>
                    <label for="typeI">Type d'intervention : </label>
                    <div class="radio">
                        <label for="plaidoyer" class="radio">
                            <input type="radio" name="origine" value="plaidoyer" id="plaidoyer">
                            Plaidoyers
                        </label>
                    </div>
                    <div class="radio">
                        <label for="frimousse" class="radio">
                            <input type="radio" name="origine" value="frimousse" id="frimousse">
                            Frimousses
                        </label>
                    </div>
                    <div class="radio">
                        <label for="Autre" class="radio">
                            <input type="radio" name="origine" value="autre" id="autre">
                            Autres interventions
                        </label>
                    </div>
                </fieldset>
            </form>
        </div>
    </section>

    <section class="col-lg-10 col-md-10 col-sm-10">
        <h2>Liste des interventions :</h2>
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>#</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Voir détails</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Supprimer</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for intervention in liste %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ intervention.lieu }}</td>
                    <td>{{ intervention.date }}</td>
                    <td><a href="{#{ path('architecture_intervention_view', {id: intervention.id}) }#}" class="btn btn-primary">Voir détails</a></td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td><a href="{#{ path('architecture_intervention_delete', {id: intervention.id}) }#}" class="btn btn-danger">Supprimer</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <td colspan="5" class="text-center"><a href="{#{ path('architecture_intervention_add') }#}" class="btn btn-primary btn-danger"><i class="glyphicon glyphicon-alert"></i> Ajouter une intervention</a></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </section>


{% endblock %}
