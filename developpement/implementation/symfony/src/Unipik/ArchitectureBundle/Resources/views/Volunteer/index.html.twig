{% extends "ArchitectureBundle:Volunteer:layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}

    <h2>Liste des bénévoles :</h2>

    <table class="table table-striped table-hover ">

        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Voir détails</th>
            <th>Supprimer</th>
        </tr>
        </thead>

        <tbody>
        {% for volunteer in volunteers %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ volunteer.nom }}</td>
                <td>{{ volunteer.prenom }}</td>
                <td><a href="{{ path('architecture_volunteer_view', {id: volunteer.id}) }}" class="btn btn-primary">Voir détails</a></td>
                <td><a href="{{ path('architecture_volunteer_delete', {id: volunteer.id}) }}" class="btn btn-danger">Supprimer</a></td>

            </tr>
        {% endfor %}
        <tr>
            <td colspan="5" class="text-center"><a href="{{ path('architecture_volunteer_add') }}" class="btn btn-primary">Ajouter un bénévole</a></td>
        </tr>
        </tbody>

    </table>


{% endblock %}