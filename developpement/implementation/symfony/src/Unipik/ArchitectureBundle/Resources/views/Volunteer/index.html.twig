{% extends "ArchitectureBundle:Volunteer:layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}

    <h2>Liste des bénévoles :</h2>

    <table class="table table-striped table-hover ">

        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Téléphone Fixe</th>
            <th>Téléphone Portable</th>
            <th>Voir détails</th>
            <th>Supprimer</th>
        </tr>
        </thead>

        <tbody>
        {% for volunteer in volunteers %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ volunteer.nom }}</td>
                <td>{{ volunteer.prenom }}</td>
                <td>{{ volunteer.email }}</td>
                <td>{{ volunteer.telFixe }}</td>
                <td>{{ volunteer.telPortable }}</td>
                <td>{{ path('architecture_volunteer_view') ~ '/' ~ volunteer.id }}</td>
                <td>{{ path('architecture_volunteer_delete') ~ '/' ~ volunteer.id }}</td>

            </tr>
        {% endfor %}
        </tbody>

    </table>


{% endblock %}