{% extends "InterventionBundle::layout.html.twig" %}

{% block title %}

    Liste des plaidoyers - {{ parent() }}

{% endblock %}

{% block body %}
    <h2>Liste des interventions :</h2>
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Lieu</th>
            <th>Date</th>
            <th>Voir détails</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for plaidoyer in listPlaidoyers %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ plaidoyerlieu }}</td>
                <td>{{ plaidoyermoment }}</td>
                <td><a href="{#{ path('architecture_intervention_view', {id: plaidoyerid}) }#}" class="btn btn-primary">Voir détails</a></td>
                <td><a href="{#{ path('architecture_intervention_delete', {id: plaidoyerid}) }#}" class="btn btn-danger">Supprimer</a></td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5" class="text-center"><a href="{#{ path('architecture_intervention_add') }#}" class="btn btn-primary">Ajouter une intervention</a></td>
        </tr>
        </tbody>
    </table>
{% endblock %}
